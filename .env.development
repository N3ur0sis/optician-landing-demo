# =================================
# DEVELOPMENT ENVIRONMENT
# =================================

# Build target for Docker
NODE_ENV=development
BUILD_TARGET=development

# Database Configuration
POSTGRES_DB=optician_db
POSTGRES_USER=optician
POSTGRES_PASSWORD=optician_dev_password
POSTGRES_PORT=5432

# Database URL (used by Prisma)
# For Docker: use 'db' as hostname
# For local development: use 'localhost'
DATABASE_URL="postgresql://optician:optician_dev_password@db:5432/optician_db?schema=public"

# NextAuth.js Configuration
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET="development-secret-key-change-in-production-min-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# Admin User (initial setup)
ADMIN_EMAIL="admin@optician.com"
ADMIN_PASSWORD="DevPassword123!"

# Application
PORT=3000
