# =================================
# PRODUCTION ENVIRONMENT
# =================================

# Build target for Docker
NODE_ENV=production
BUILD_TARGET=production

# Database Configuration
POSTGRES_DB=optician_db
POSTGRES_USER=optician
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_IN_PRODUCTION
POSTGRES_PORT=5432

# Database URL (used by Prisma)
DATABASE_URL="postgresql://optician:CHANGE_THIS_SECURE_PASSWORD_IN_PRODUCTION@db:5432/optician_db?schema=public"

# NextAuth.js Configuration
# CRITICAL: Generate a secure secret with: openssl rand -base64 32
NEXTAUTH_SECRET="CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS"
NEXTAUTH_URL="https://yourdomain.com"

# Admin User (initial setup)
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="CHANGE_THIS_SECURE_PASSWORD"

# Application
PORT=3000
