# =================================
# ENVIRONMENT CONFIGURATION
# Copy this file to .env and configure
# =================================

# Environment: development | production
NODE_ENV=development
BUILD_TARGET=development

# Database Configuration
POSTGRES_DB=optician_db
POSTGRES_USER=optician
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# Database URL (used by Prisma)
# For Docker: use 'db' as hostname
# For local development: use 'localhost'
DATABASE_URL="postgresql://optician:your_secure_password_here@db:5432/optician_db?schema=public"

# NextAuth.js Configuration
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-min-32-characters-long"
NEXTAUTH_URL="http://localhost:3000"

# Admin User (for initial database seed)
ADMIN_EMAIL="admin@optician.com"
ADMIN_PASSWORD="YourSecurePassword123!"

# Application Port
PORT=3000
